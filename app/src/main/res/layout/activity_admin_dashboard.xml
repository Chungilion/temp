<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top section with image and name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image placeholder -->
        <ImageView
            android:id="@+id/admin_user_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#D3D3D3"
            android:contentDescription="Admin User Image"
            android:scaleType="centerCrop" />

        <!-- Name and job title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/admin_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chức vụ"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Grid section with management buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <!-- Button 1: Financial Management -->
        <Button
            android:id="@+id/btn_finance_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Quản lý tài chính"
            android:layout_margin="4dp" />

        <!-- Button 2: Human Resource Management -->
        <Button
            android:id="@+id/btn_hr_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Quản lý nhân sự"
            android:layout_margin="4dp" />

        <!-- Button 3: Inventory Management -->
        <Button
            android:id="@+id/btn_inventory_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Quản lý hàng hóa"
            android:layout_margin="4dp" />

        <!-- Button 4: Payroll Management -->
        <Button
            android:id="@+id/btn_payroll_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Quản lý bảng công"
            android:layout_margin="4dp" />

        <!-- Button 5: Account Allocation -->
        <Button
            android:id="@+id/btn_account_allocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Cấp phát tài khoản"
            android:layout_margin="4dp" />

        <!-- Button 6: Asset Management -->
        <Button
            android:id="@+id/btn_asset_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Quản lý tài sản"
            android:layout_margin="4dp" />
    </GridLayout>

    <!-- Bottom section with additional actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_business_operations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nghiệp vụ"
            android:layout_margin="4dp" />

        <!-- Replacing Give Notice with Logout -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logout"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nhắn tin"
            android:layout_margin="4dp" />
    </LinearLayout>
</LinearLayout>
